#include <iostream>

using namespace std;

int main()
{
    int n;
    int number = 1;
    cin>>n;
    for(int i = 1;i<=n;i++)
    {
        for(int j = 1;j<=i;j++)
        {
            cout<<number<<" ";
            number++;
        }
        cout<<endl;
    }
    
    return 0;
}

/* here lies the program for printing the 
1
2,2
3,3,3
4,4,4,4... pattern 
*/

#include <iostream>

using namespace std;

int main()
{
    int n;
    int number = 1;
    cin>>n;
    for(int i = 1;i<=n;i++)
    {
        for(int j = 1;j<=i;j++)
        {
            cout<<i<<" ";
            number++;
        }
        cout<<endl;
    }
    
    return 0;
}
